<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.segundoauqui.navegationapp.MP3Player">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center"


        >



        <ImageView


            android:layout_weight="4"
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/new_icon_deadpool" />

    </LinearLayout>

    <Button
        android:onClick="playSong"
        android:layout_gravity="left"
        android:adjustViewBounds="true"
        android:background="@color/colorGreen"
        android:layout_width="191dp"
        android:layout_height="105dp"
        android:id="@+id/playMusic"
        android:text="PLAY"
        android:icon="@drawable/ic_play_circle_filled_black_24dp"/>

    <Button
        android:onClick="pauseSong"
        android:background="@color/colorYellow"
        android:layout_gravity="center_horizontal"
        android:layout_width="194dp"
        android:layout_height="105dp"
        android:id="@+id/pauseMusic"
        android:text="PAUSE"
        android:icon="@drawable/ic_play_circle_filled_black_24dp"/>


    <Button
        android:onClick="stopSong"
        android:background="@color/colorRed"
        android:layout_gravity="end"
        android:layout_width="194dp"
        android:layout_height="105dp"
        android:id="@+id/stopMusic"
        android:text="STOP"
        android:icon="@drawable/ic_play_circle_filled_black_24dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />




</FrameLayout>
